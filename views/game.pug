extends layout

block content
  h1= title
  - let items = results;
  div(class="container-fluid")
    div(class="row")
      each item,index in items
        - let destination = `dispatch(\"/game/update?id=${item._id}\")`
        div(class="col-sm-2" class="m-1")
          h3 #{item.game_name}
          p #{item.version}
          p #{item.price}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
    function dispatch(path){
      console.log(path);
      window.location.href=path;
    }